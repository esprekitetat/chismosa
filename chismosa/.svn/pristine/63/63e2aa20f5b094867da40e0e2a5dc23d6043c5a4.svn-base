	public function censorName($name){
		$firstname = "";
		$lastname = "";
		$pieces = explode(' ',$name);
		$firstname = $pieces[0][0];
		$lastname = $pieces[1][0];
		for($i=0;$i<strlen($pieces[0])-1;$i++){
			$firstname .= '*';

		}
		for($i=0;$i<strlen($pieces[1])-1;$i++){
			$lastname .= '*';

		}
		return $firstname . " " . $lastname;
	}
